{
  "name": "@o861runners-gif/setup-ssh-tunnel",
  "version": "2.0.0",
  "description": "Automated SSH server setup with tunneling (Pinggy, SSH-J, Cloudflare) for CI/CD environments (Azure Pipelines, GitHub Actions)",
  "main": "lib/index.js",
  "bin": {
    "setup-ssh": "bin/setup-ssh.js"
  },
  "scripts": {
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration --passWithNoTests",
    "lint": "eslint lib bin tests --ignore-pattern 'node_modules/'",
    "lint:fix": "eslint lib bin tests --fix --ignore-pattern 'node_modules/'",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepare": "node -e \"try { require('fs').chmodSync('bin/setup-ssh.js', 0o755); } catch(e) {}\"",
    "prepublishOnly": "npm run lint && npm test",
    "version": "git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "ssh",
    "tunnel",
    "ci-cd",
    "azure-pipelines",
    "github-actions",
    "pinggy",
    "sshj",
    "cloudflare-tunnel",
    "cloudflared",
    "devops",
    "remote-access",
    "automation",
    "ssh-server",
    "reverse-tunnel"
  ],
  "author": "YOUR_NAME <YOUR_EMAIL>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/o861runners-gif/setup-ssh-tunnel.git"
  },
  "bugs": {
    "url": "https://github.com/o861runners-gif/setup-ssh-tunnel/issues"
  },
  "homepage": "https://github.com/o861runners-gif/setup-ssh-tunnel#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "bin/",
    "lib/",
    "templates/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^18.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!lib/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
